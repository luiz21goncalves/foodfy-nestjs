{
  "name": "foodfy-nestjs",
  "version": "0.0.0",
  "description": "Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.",
  "author": "Luiz Gon√ßalves<luizhbgoncalves@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "start": "nest start",
    "start:dev": "nest start --env-file .env.development --watch",
    "start:debug": "nest start --env-file .env.development --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "pretest": "docker compose up -d",
    "test": "vitest run",
    "posttest": "docker compose stop",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage",
    "test:debug": "vitest --inspect-brk --inspect --logHeapUsage --threads=false",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/common": "11.0.10",
    "@nestjs/config": "4.0.0",
    "@nestjs/core": "11.0.10",
    "@nestjs/platform-express": "11.0.10",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/typeorm": "11.0.0",
    "joi": "17.13.3",
    "pg": "8.13.3",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.20"
  },
  "devDependencies": {
    "@commitlint/cli": "19.7.1",
    "@commitlint/config-conventional": "19.7.1",
    "@eslint/eslintrc": "3.3.0",
    "@eslint/js": "9.21.0",
    "@nestjs/cli": "11.0.4",
    "@nestjs/schematics": "11.0.1",
    "@nestjs/testing": "11.0.10",
    "@swc/cli": "0.6.0",
    "@swc/core": "1.10.18",
    "@types/express": "5.0.0",
    "@types/node": "22.13.5",
    "@types/supertest": "6.0.2",
    "@vitest/coverage-v8": "3.0.6",
    "eslint": "9.21.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-prettier": "5.2.3",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "16.0.0",
    "husky": "9.1.7",
    "lint-staged": "15.4.3",
    "prettier": "3.5.2",
    "source-map-support": "0.5.21",
    "supertest": "7.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.7.3",
    "typescript-eslint": "8.24.1",
    "unplugin-swc": "1.5.1",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.0.6"
  }
}
